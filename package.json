{
  "name": "sentry-electron-app",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Ant√≥nio Coimbra",
    "email": "antonio.coimbra@sea.ai"
  },
  "description": "Electron desktop implementation for the Sentry React application.",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "cross-env": "^7.0.3",
    "multicast-dns": "^7.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1"
  },
  "main": "public/electron.js",
  "title": "SEA.AI Sentry",
  "homepage": "./",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "dev": "concurrently -k \"cross-env BROWSER=none npm start\" \"wait-on http://localhost:3000 && electronmon .\"",
    "electron-package-win": "npm run build && electron-builder -w -c.extraMetadata.main=build/electron.js"
  },
  "build": {
    "appId": "com.electron.sentry",
    "productName": "Electron-React SEA.AI Sentry",
    "files": ["build/**/*", "node_modules/**/*"],
    "directories": {
      "buildResources": "public"
    },
    "mac": {
      "target": "dmg"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "deb"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
    "electron": "^24.0.0",
    "electron-is-dev": "^2.0.0",
    "wait-on": "^7.0.1",
    "electron-builder": "^23.6.0",
    "electronmon": "^2.0.2"
  }
}
